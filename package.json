{
  "name": "typescript-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "docs": "npx typedoc --out docs --json docs.json --readme none --theme minimal --mode file src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "git-hook:pre-commit": "yarn run prettier:write && yarn run lint:write && yarn run jscpd && yarn run depcruise && yarn run test",
    "jscpd": "jscpd ./src --blame",
    "jscpd:html": "yarn run jscpd -- --reporters html",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:write": "yarn run lint -- --fix",
    "lint:watch": "nodemon --exec \"yarn run lint\"",
    "prettier": "prettier",
    "prettier:check": "yarn run prettier -- --list-different \"src/**/*.{ts,tsx}\" && yarn run prettier -- --list-different \"test/**/*.{ts,tsx}\"",
    "prettier:write": "yarn run prettier -- --write \"src/**/*.{ts,tsx}\" && yarn run prettier -- --write \"test/**/*.{ts,tsx}\"",
    "prerelease": "yarn run build",
    "release": "release-it --ci --no-npm.publish",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:junit": "npm run test -- --reporters=default --reporters=jest-junit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "dependency-cruiser": "^9.8.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "prettier": "^2.0.5",
    "release-it": "^13.6.4",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.6",
    "yorkie": "^2.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "gitHooks": {
    "pre-commit": "yarn run git-hook:pre-commit && git add .",
    "commit-msg": "commitlint -e -V "
  }
}
